{% if plugins.ecommerce.products|length %}
<section class="ecom-productslist-products">
    {% for product in plugins.ecommerce.products %}
    <article class="ecom-productslist-product">
        <h2 class="ecom-productslist-title">{{product.title}}</h2>
        <p class="ecom-productslist-description">{{product.shortDescription}}</p>
        {% if product.category is not null %}
            <div class="ecom-productslist-category">
                <a href="/store/categories/{{product.category.name}}" class="store-category-link">{{product.category.name}}</a>
            </div>
        {% endif %}
        {% if product.tags is not null %}
            {% for tag in product.tags %}
            <div class="ecom-productslist-tags">
                <span class="ecom-productslist-tag">
                    <a href="/store/tags/{{tag}}" class="ecom-productslist-tag-link">{{tag}}</a>
                </span>
            </div>
            {% endfor %}
        {% endif %}
        {% if product.assets is not null %}
            {% for asset in product.assets %}
                {% if plugins.assets.images[asset.assetRef].fileType == 'image' %}
                    {% set imageSrc = plugins.assets.images[asset.assetRef].url %}
                    <div class="ecom-productslist-image-wrap" style="background-image:url('{{ imageSrc }}')">
                        <img class="ecom-productslist-image" src="{{imageSrc}}">
                    </div>
                {% endif %}
            {% endfor %}
        {% endif %}
        <button class="btn" data-ref="{{ product.ref }}">Add to cart</button>
    </article>
    {% endfor%}
{% else %}
    <p>There aren't any products to display.</p>
{% endif %}
