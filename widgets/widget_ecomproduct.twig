{% if plugins.ecommerce.products[0] is defined %}
{% set product = plugins.ecommerce.products[0] %}
    <article class="ecom-product">
        <h2 class="ecom-product-title">{{product.title}}</h2>
        <p class="ecom-product-long-description">{{product.longDescription}}</p>
        <p class="ecom-product-sku">{{product.sku}}</p>
    {% if product.category is not null %}
        <span class="ecom-product-category">
            {{product.category.name}}
        </span>
    {% endif %}
    {% if product.tags is not null %}
        {% for tag in product.tags %}
        <span class="ecom-product-tag">
            <a href="/store/tags/{{tag}}" class="ecom-product-tag-link">{{tag}}</a>
        </span>
        {% endfor %}
    {% endif %}
    {% if product.assets is not null %}
        {% for asset in product.assets %}
            {% if plugins.assets.images[asset.assetRef].fileType == 'image' %}
                {% set imageSrc = plugins.assets.images[asset.assetRef].url %}
                <div class="ecom-product-image-wrap" style="background-image:url('{{ imageSrc }}')">
                    <img class="ecom-product-image"  src="{{plugins.assets.images[asset.assetRef].url}}" alt>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
    <button class="btn" data-ref="{{ product.ref }}">Add to cart</button>
    </article>
{% else %}
    <p>There aren't any products to display.</p>
{% endif %}
