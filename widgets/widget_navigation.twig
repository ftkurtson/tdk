<div class="navigation">

{% set i = 0 %}
{% for page in pages %}
	{% if (page.type == 'home' or page.type == 'page' or page.type == 'index') and page.status != 'inactive' %}
		{% set i = i + 1 %}
	{% endif %}
{% endfor %}

	<ul class="{{ data.align  ? ' align-' : ''}}{{ data.align }} {{i}}-items">
		{% for page in pages %}
			{% if (page.type == 'home' or page.type == 'page' or page.type == 'index') and page.status != 'inactive' and page.parentId == '0' and page.hiddenFromNavigation != '1' %}
				<li id="menu-item_{{ page.ref }}">
                    {% set pageRequest = (page.type == 'home') ? '' : page.request %}
					<a href="{{ relativeUrlPrefix }}/{{ pageRequest }}">
						<span class="{% for item in data.icons %}{% if (item.ref == page.ref) and (item.icon != 'no-icon') %}{{item.icon}}{% endif %}{% endfor %} menu-icon"></span>
						<span class="text">{{ page.title }}</span>
					</a>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
    <a href="#" class="pull"></a>
</div>
