{% set url = '' %}
{% for page in pages %}
    {% if page.type == 'home' and app.mode == 'site-preview' %}
        {% set url = page.request %}
    {% endif %}
{% endfor %}

<div class="companyname-wrap {{ data.align }}">
    <a href="{{ relativeUrlPrefix }}/{{ url }}">
    {% if data.business and data.business !='profile' and data.business !=''%}
        {{data.business}}
    {% elseif profile.business and profile.business != '' %}
        {{profile.business}}
    {% else %}
        My Website
    {% endif %}
    </a>
</div>
